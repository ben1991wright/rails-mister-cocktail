<div class="container">
  <div class="recipe">
    <h1><%= @cocktail.name %></h1>
    <ul class="recipe-list">
      <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="far fa-minus-square"></i>
        <% end %>
      </li>
      <% end %>
      <li><i class="far fa-plus-square" id="add-dose"></i></li>
      <div id="dose-form" class="hidden">
        <%= simple_form_for([@cocktail, @dose]) do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-4">
                <%= f.input :description, label: false %>
              </div>
              <div class="col-xs-6">
                <%= f.association :ingredient, collection: Ingredient.all.order(:name), label: false %>
              </div>
              <div class="col-xs-2">
              <button type="submit" class='submit-btn'>
                <i class="far fa-plus-square"></i>
              </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </ul>
  </div>
</div>
